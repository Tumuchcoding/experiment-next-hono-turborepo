# --- URLs exposed to the browser ---
NEXT_PUBLIC_API_URL="/api" # Where the web app calls the API from the browser (keep /api when proxying through Next)
NEXT_PUBLIC_WEB_URL="http://localhost:3001" # Public URL for this web app (used during SSR defaults), your frontend site

# --- Server-side proxy target ---
API_PROXY_TARGET="http://localhost:3002" # Where Next.js rewrites /api/* requests (point at your API deployment in production), your backend site
