// web/tsconfig.json
{
  "compilerOptions": {
    "baseUrl": ".",                   // ðŸ‘ˆ REQUIRED for "paths" to work
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@api/*": ["../api/src/*"],
      "@/*": ["./*"]   // add back if you want your local alias too
    },
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "references": [{ "path": "../api" }]
}
