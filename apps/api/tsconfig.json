{
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*", "../../packages/db/src/*"]
    },
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "verbatimModuleSyntax": true
  }
}
