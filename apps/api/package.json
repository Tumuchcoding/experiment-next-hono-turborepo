{
  "name": "api",
  "type": "module",
  "main": "./dist/app.js",
  "exports": "./src/index.ts",
  "scripts": {
    "build": "bunx tsdown && node ./scripts/generate-vercel-handler.mjs",
    "check:type": "tsc --noEmit",
    "dev": "bun run --hot src/app.ts",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/app.ts --outfile server",
    "postinstall": "node ./scripts/fix-orpc-hono-imports.mjs",
    "start": "node dist/app.js"
  },
  "dependencies": {
    "@orpc/contract": "^1.9.4",
    "@orpc/server": "^1.9.4",
    "@outscope/orpc-hono": "^0.2.0",
    "argon2": "^0.44.0",
    "db": "workspace:*",
    "hono": "^4.9.9",
    "reflect-metadata": "^0.2.2",
    "tsc-alias": "^1.8.16",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/node": "^24.8.1",
    "tsdown": "^0.15.6",
    "typescript": "catalog:"
  }
}
